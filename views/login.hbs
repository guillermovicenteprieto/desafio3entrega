<div class="container">
  <div>
    <h2 class="text-center">LOGIN</h2>

    <div class="bg-warning">
      <div class="p-2">
      <form action="/login" method="POST">
              <div class="form-group m-2">
          <label class="m-1" for="nombre">Nombre</label>
          <input
            type="username"
            class="form-control"
            id="username"
            name="username"
            placeholder="Ingrese su nombre USUARIO"
          />
        </div>
        <div class="form-group m-2">
          <label for="email">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            placeholder="Ingrese su email"
          />
        </div>
        <div class="form-group m-2">
          <label for="password">Password</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            placeholder="Ingrese su password"
          />
        </div>
        <div class="container"><button type="submit" class="btn btn-success mt-2">Login</button></div>
      </form>

      </div>
    </div>
    
    <hr />
    <div class="container">
      <button
        class="btn btn-primary my-3"
        onclick="location.href = '/registro'"
      >Ir al Registro</button>
    </div>
  </div>
</div>