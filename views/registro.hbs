<div class="container">
  <div>
    <h3 class="text-center">REGISTRO</h3>
    <div>
      <div class="bg-dark">
        <div class="p-2">
          <form class="form" action="/registro" method="post" role="form" autocomplete="off">

            <div class="form-group  m-2">
              <label class="text-light m-1" >Nombre</label>
              <input id="name" name="name" placeholder="Ingrese su nombre" class="form-control" type="text" required />
            </div>

            <div class="form-group  m-2">
              <label class="text-light m-1" >Apellido</label>
              <input id="lastname" name="lastname" placeholder="Ingrese su apellido" class="form-control" type="text"
                required />
            </div>

            <div class="form-group  m-2">
              <label class="text-light m-1" >Dirección</label>
              <input id="adress" name="adress" placeholder="Ingrese su dirección" class="form-control" type="text"
                required />
            </div>

            <div class="form-group  m-2">
              <label class="text-light m-1" >Edad</label>
              <input id="age" name="age" placeholder="Ingrese su edad" class="form-control" type="number" required />
            </div>

            <div class="form-group  m-2">
              <label class="text-light m-2" >Teléfono</label>
              <input id="phone" name="phone" placeholder="Ingrese su teléfono" class="form-control" type="tel"
                required />
            </div>

            <div class="form-group  m-2">
              <label class="text-light  m-1">Suba una foto de perfil</label>
              <input class="form-control form-control-sm" id="formFileSm" type="file">
            </div>
            <hr class="text-light  m-1">
            <h5 class="form-group  m-3 text-warning">Los siguientes datos se le solicitarán para poder realizar el
              LOGIN
            </h5>

            <div class="form-group  m-2">
              <label class="text-light  m-1" for="nombre">Nombre USUARIO</label>
              <input id="username" name="username" placeholder="Ingrese su nombre de Usuario" class="form-control"
                type="text" required />
            </div>

            <div class="form-group m-2">
              <label class="text-light  m-1" for="email">Email</label>
              <input id="email" name="email" placeholder="Ingrese su email" class="form-control" type="text" required />
            </div>

            <div class="form-group m-2">
              <label class="text-light m-1" for="password">Password</label>
              <input id="password" name="password" placeholder="Ingrese su password" class="form-control"
                type="password" required />
            </div>

            <div class="container">
              <input class="btn btn-primary mt-5" type="submit" value="Registro" />
            </div>
          </form>

        </div>

      </div>
      <hr />
      <div class="container mb-5 text-center">
        <button class="btn btn-success" onclick="location.href = '/login'">Ir
          a Login</button>
      </div>

    </div>

  </div>